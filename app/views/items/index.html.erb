<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div id="items">
  <% @items.each do |item| %>
    <%= render item %>
    <p>
      <%= link_to "Show this item", list_item_path(list_id: @list.id, id: item.id) %>
    </p>
  <% end %>
</div>

<%= link_to "New item", new_list_item_path(list_id: @list.id) %>
